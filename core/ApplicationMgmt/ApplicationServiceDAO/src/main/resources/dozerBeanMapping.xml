<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <configuration>
        <custom-converters>
            <converter type="eu.ohim.sp.core.application.converter.StatusConverter">
                <class-a>java.lang.Integer</class-a>
                <class-b>eu.ohim.sp.core.domain.application.ApplicationStatus</class-b>
            </converter>
        </custom-converters>
    </configuration>
    
    <mapping>
    	<class-a>eu.ohim.sp.core.application.DraftStatus</class-a>
    	<class-b>eu.ohim.sp.core.domain.application.DraftStatus</class-b>
    	<field custom-converter="eu.ohim.sp.core.application.converter.StatusConverter">
    		<a>code.code</a>
    		<b>status</b>
    	</field>
    </mapping>
    
    <mapping>
        <class-a>eu.ohim.sp.core.application.DraftApplication</class-a>
        <class-b>eu.ohim.sp.core.domain.application.DraftApplication</class-b>
        <field>
            <a>tyApplication.typeApplication</a>
            <b>tyApplication</b>
        </field>
        <field custom-converter="eu.ohim.sp.core.application.converter.StatusConverter">
			<a>currentStatus.code</a>
			<b>currentStatus.status</b>
			<a-hint>java.lang.Integer</a-hint>
			<b-hint>eu.ohim.sp.core.domain.application.ApplicationStatus</b-hint>
		</field>
    </mapping>
</mappings>