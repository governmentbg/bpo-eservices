<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>eu.ohim.sp.core</groupId>
		<artifactId>Report</artifactId>
		<version>2.0.0-RELEASE</version>
	</parent>

	<artifactId>ReportServiceBean</artifactId>
	<packaging>ejb</packaging>

	<dependencies>

		<dependency>
			<groupId>eu.ohim.sp.common</groupId>
			<artifactId>CommonUtils</artifactId>
		</dependency>

		<dependency>
			<groupId>eu.ohim.sp.domains</groupId>
			<artifactId>CoreDomain</artifactId>
		</dependency>

		<dependency>
			<groupId>eu.ohim.sp.domains</groupId>
			<artifactId>CoreServices</artifactId>
		</dependency>

		<dependency>
			<groupId>org.jboss.spec</groupId>
			<artifactId>jboss-javaee-6.0</artifactId>
			<type>pom</type>
		</dependency>

		<dependency>
			<groupId>org.apache.velocity</groupId>
			<artifactId>velocity</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.eclipse.birt.runtime</groupId>
			<artifactId>org.eclipse.birt.runtime</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.eclipse.birt.runtime.3_7_1</groupId>
					<artifactId>derby</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>

		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>

		<!-- https://mvnrepository.com/artifact/org.exparity/exparity-stub -->
		<dependency>
			<groupId>org.exparity</groupId>
			<artifactId>exparity-stub</artifactId>
			<version>2.0.2</version>
		</dependency>

		<dependency>
			<groupId>eu.ohim.sp.core</groupId>
			<artifactId>ExcelGenerator</artifactId>
			<version>${pm.sp.core.current.version}</version>
		</dependency>
	</dependencies>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<classpathPrefix>APP-INF/lib</classpathPrefix>
							<classpathLayoutType>custom</classpathLayoutType>
							<customClasspathLayout>$${artifact.artifactId}.$${artifact.extension}</customClasspathLayout>
						</manifest>
						<manifestEntries>
							<Dependencies>eu.ohim.sp, org.apache.commons.lang</Dependencies>
						</manifestEntries>
					</archive>
					<ejbVersion>3.0</ejbVersion>
				</configuration>
			</plugin>
		</plugins>

	</build>
</project>