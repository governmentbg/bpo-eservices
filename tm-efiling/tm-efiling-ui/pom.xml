	<build>
		<finalName>sp-ui-tmefiling</finalName>

		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<!-- here the phase you need -->
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/sp-ui-tmefiling/WEB-INF/views</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/../../common-ui/component/UIComponent/src/main/resources/META-INF/resources/jsp</directory>

								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources2</id>
						<!-- here the phase you need -->
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/sp-ui-tmefiling/resources/scripts/developers</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/../../common-ui/component/UIComponent/src/main/resources/META-INF/resources/scripts</directory>

								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.lesscss</groupId>
				<artifactId>lesscss-maven-plugin</artifactId>
				<version>1.7.0.1.1</version>
				<configuration>
					<sourceDirectory>${basedir}/src/main/resources/less</sourceDirectory>
					<outputDirectory>${basedir}/src/main/webapp/resources</outputDirectory>
					<force>true</force>
					<compress>false</compress>
					<includes>
						<include>css/fsp.less</include>
						<include>css/gs.less</include>
						<include>css/nav.less</include>
					</includes>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
