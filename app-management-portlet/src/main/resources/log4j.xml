<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
        
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

    
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%p] %l[%t] %X - %m%n"/>
        </layout>
    </appender>

    <appender name="roll" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="Threshold" value="WARN"/>
        <param name="File" value="${catalina.base}/logs/app-management-portlet.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%-5p] %C  %M(%L) - %m%n"/>
        </layout>

    </appender>

    <root>
        <level value="DEBUG"></level>
        <appender-ref ref="console"></appender-ref>
        <appender-ref ref="roll"></appender-ref>
    </root>
    
</log4j:configuration>