<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>release</id>
    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <!-- copy sp-pt-efiling.war -->
        <dependencySet>
            <includes>
                <include>eu.ohim.sp.ui:pt-efiling-ui</include>
            </includes>
            <outputDirectory>${servlet.container.app.root}</outputDirectory>
            <outputFileNameMapping>${artifact.name}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- tomcat pt-efiling specific configuration -->
        <fileSet>
            <outputDirectory>${servlet.container.conf.root}/pt-efiling</outputDirectory>
            <directory>${basedir}/sp-fo/configuration/servlet-container/pt-efiling/</directory>
        </fileSet>

        <!-- core pt-efiling specific configuration -->
        <fileSet>
            <outputDirectory>${app.server.conf.root}/pt-efiling/</outputDirectory>
            <directory>${basedir}/sp-fo/configuration/app-server/pt-efiling/</directory>
        </fileSet>


        <!-- apache static resources -->
        <fileSet>
            <outputDirectory>${web.server.app.root}/sp-ui-ptefiling/resources</outputDirectory>
            <directory>${basedir}/../pt-efiling/pt-efiling-ui/src/main/webapp/resources</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>${web.server.app.root}/sp-ui-ptefiling/</outputDirectory>
            <directory>${basedir}/../pt-efiling/pt-efiling-ui/src/main/webapp</directory>
            <excludes>
                <exclude>META-INF</exclude>
                <exclude>resources</exclude>
                <exclude>WEB-INF</exclude>
                <exclude>error.jsp</exclude>
                <exclude>index.jsp</exclude>
            </excludes>
            <includes>
                <include>resources/*.*</include>
                <include>robots.txt</include>
            </includes>
        </fileSet>


    </fileSets>

</assembly>