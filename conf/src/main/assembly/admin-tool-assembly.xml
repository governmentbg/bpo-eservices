<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>release</id>
    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <!-- copy admin-tools-be.war -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>eu.ohim.sp.ui:release-fo</include>
            </includes>
            <outputDirectory>${servlet.container.app.root}</outputDirectory>
            <outputFileNameMapping>admin-tools-be.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
		<!-- copy admin-tools-fe.zip -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>eu.ohim.sp.ui:admin-tools-fe</include>
            </includes>
            <outputDirectory>${servlet.container.app.root}</outputDirectory>
            <outputFileNameMapping>${artifact.name}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- tomcat tm-efiling specific configuration -->
        <fileSet>
            <outputDirectory>${servlet.container.conf.root}/admin-tool</outputDirectory>
            <directory>${basedir}/sp-fo/configuration/servlet-container/admin-tool/</directory>
        </fileSet>

        <!-- core tm-efiling specific configuration -->
        <fileSet>
            <outputDirectory>${app.server.conf.root}/admin-tool/</outputDirectory>
            <directory>${basedir}/sp-fo/configuration/app-server/admin-tool/</directory>
        </fileSet>
		
    </fileSets>

</assembly>