<?xml version="1.0" encoding="UTF-8"?>
<flow parent="common" xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="'um-invalidity'" result="flowScope.flowModeId"
				  result-type="java.lang.String" />
		<!-- This will work as long as the child elements are added before the parent flow -->

		<evaluate expression="'/submitted_notmdn.htm'" result="flowScope.finalView" result-type="java.lang.String"/>
		<evaluate expression="'error_page.notmdn'" result="flowScope.errorPage" result-type="java.lang.String"/>
		<evaluate expression="'failureTile.notmdn'" result="flowScope.failureTile" result-type="java.lang.String"/>
	</on-start>

	<decision-state id="isLoadApplication">
		<if test="flowScope.flowBean.isReadOnly()" then="submitted" else="reference_umInvalidated" />
	</decision-state>

	<view-state id="reference_umInvalidated" view="tiles.wiz.notmdn" model="flowBean">
		<transition on="Next" to="invalidityBasisUm" validate="true" />
	</view-state>

	<view-state id="invalidityBasisUm" view="tiles.wiz.notmdn" model="flowBean">
		<transition on="Previous" to="reference_umInvalidated" validate="false" />
		<transition on="Next" to="opponent_repressentative_inv" validate="true" />
	</view-state>

	<view-state id="opponent_repressentative_inv" view="tiles.wiz.notmdn" model="flowBean">
		<transition on="Previous" to="invalidityBasisUm" validate="false" />
		<transition on="Next" to="review_submit" validate="true" />
	</view-state>

	<view-state id="review_submit" view="tiles.wiz.notmdn" model="flowBean">
		<transition on="Update_Patent" to="reference_umInvalidated" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
		<transition on="Update_OppositionBasis" to="invalidityBasisUm" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
		<transition on="Update_Person" to="opponent_repressentative_inv" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
		<transition on="Previous" to="opponent_repressentative_inv" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
	</view-state>
</flow>
