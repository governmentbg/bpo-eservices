<?xml version="1.0" encoding="UTF-8"?>
<flow parent="common" xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>		
		<evaluate expression="'tm-opposition'" result="flowScope.flowModeId"
			result-type="java.lang.String" />
	</on-start>
	
	<decision-state id="isLoadApplication">
    	<if test="flowScope.flowBean.isReadOnly()" then="submitted" else="reference_tmOpposed" />
	</decision-state>

	
	<view-state id="reference_tmOpposed" view="tiles.wiz" model="flowBean">
		<transition on="Next" to="oppositionBasis" validate="true" />
	</view-state>

	<view-state id="oppositionBasis" view="tiles.wiz" model="flowBean">
		<transition on="Previous" to="reference_tmOpposed" validate="false" />
		<transition on="Next" to="opponent_repressentative" validate="true" />
	</view-state>
	
	<view-state id="opponent_repressentative" view="tiles.wiz" model="flowBean">
		<transition on="Previous" to="oppositionBasis" validate="false" />
		<transition on="Next" to="signature_attachments" validate="true" />
	</view-state>
	
	<view-state id="signature_attachments" view="tiles.wiz" model="flowBean">
		<transition on="Previous" to="opponent_repressentative" validate="false" />
		<transition on="Next" to="review" validate="true" />
	</view-state>

	<view-state id="review" view="tiles.wiz" model="flowBean">		
		<transition on="Update_Reference" to="reference_tmOpposed" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
		<transition on="Update_Mark" to="reference_tmOpposed" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
		<transition on="Update_Person" to="opponent_repressentative" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
		<transition on="Update_OppositionBasis" to="oppositionBasis" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
		<transition on="Update_Signature" to="signature_attachments" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
		<transition on="Update_Attachments" to="signature_attachments" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
		<transition on="Previous" to="signature_attachments" validate="false">
			<evaluate expression="!flowScope.flowBean.isReadOnly()" />
		</transition>
			
	</view-state>	
</flow>
